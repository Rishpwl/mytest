<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Form Example</title>
  <style>
    .details {
      margin-top: 20px;
      padding: 10px;
      border: 1px solid #ccc;
      border-radius: 5px;
      background: #f9f9f9;
    }

    .details h2 {
      margin-bottom: 10px;
    }

    form {
      max-width: 400px;
      margin: 0 auto;
    }
  </style>
</head>
<body>
  <h1>Create New Form</h1>

  <form action="/form/create" method="POST">
    <label for="name">Name</label>
    <input type="text" id="name" name="name" required>
    <br><br>

    <label for="age">Age</label>
    <input type="number" id="age" name="age" required>
    <br><br>

    
    <label for="gender">Gender</label>
    <input type="text" id="gender" name="gender" required>
    <br><br>

    <label for="password">Password.</label>
    <input type="password" id="password" name="password" required>
    <br><br>

    <button type="submit">Submit</button>
  </form>

  <% if (typeof Person2 !== 'undefined' && Person2) { %>
    <div class="details">
      <h2>Person Details</h2>
      <p><strong>Name:</strong> <%= Person2.name %></p>
      <p><strong>Age:</strong> <%= Person2.age %></p>
      <p><strong>Gender:</strong> <%= Person2.gender %></p>
      <p><strong>Password:</strong> <%= Person2.password %></p>
      <a href="/form/edit/<%= Person2._id %>" style="text-decoration: none;">
        <button>Edit</button>
      </a>
    </div>
  <% } %>
</body>
</html>
